<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="comment">
	<insert id="insertComment">
	insert into COMMENT (comment)
	values 
	(#{comment})
	</insert>
	<update id="updateComment">
	update COMMENT
		set comment=#{comment}
		where seq=#{seq}
	</update>
	<delete id="deleteComment">
	delete from COMMENT where seq=#{seq}
	</delete>
	<select id="getComment" resultType="string">
	select * from COMMENT where seq=#{seq}
	</select>
	<select id="getCommentList" resultType="string">
	select * from COMMENT order by seq desc
	</select>
</mapper>